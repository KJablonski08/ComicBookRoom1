<h1 >New Comic Book</h1>

<% if !!@messages %>
    <p class="danger"><%= @messages %></p>
<% end %> 

<form action="/comics" method="post">
	    <label for="title">Title:</label>
		<input type="text" id="title" name="title"/>
        <br/><br/>
        <label for="series">Series Title:</label>
        <input type="text" id="series" name="series"/>
        <br/><br/>
        <label for="issue">Issue Number:</label>
		<input type="text" id="issue" name="issue"/>
        <br/><br/>
        <label for="author">Author Name:</label>
		<input type="text" id="author" name="author"/>
        <br/><br/>
        <textarea class="textarea" type="text" id="details" name="details" placeholder="Wanna share more details? (optional)"></textarea>
        <br/><br/>
        <label for="anonymous?">Post comic anonymously? </label>
        <input type="checkbox" id="anonymous?" name="anonymous?"/>
        <br/><br/>        
		<label for="public?">Is this a public comic? </label>
		<input type="checkbox" id="public?" name="public?" 
        <br/><br/><br/>
        <input type="submit" value="Share"/>
        <br/><br/>
		<a href="/comics">Cancel</a>
	</form>